<% content_for :page_stylesheet do %>
  <%= stylesheet_link_tag "home", "data-turbo-track": "reload" %>
<% end %>

<div class="home">
  <article class="filters">
    <h3>Court Type</h3>
    <ul>
      <li>Grass</li>
      <li>Clay</li>
      <li>Hard</li>
    </ul>
  </article>
  <article class="results">
    <h2 class=""><%= t('latest_results') %></h2>
    <ul class="results__list">
      <% @matches.each do |match| %>
        <%= render('shared/result_card', match:) %>
      <% end %>
    </ul>
  </article>
